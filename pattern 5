#include<iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    for(int j=0;j<n;j++)
    {
        for(int k=1;k<=n-j;k++)
        {
            cout<<"  ";
        }
        for(int i=0;i<2*j+1;i++)
        {
            cout<<"* ";
        }cout<<endl;

    }
    for(int j=n-1;j>=0;j--)
    {
        for(int k=n-j;k>=0;k--)
        {
            cout<<"  ";
        }
        for(int i=2;i<2*j+1;i++)
        {
            cout<<"* ";
        }cout<<endl;

    }
}
