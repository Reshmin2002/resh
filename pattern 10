#include<iostream>
using namespace std;
int main()
{
    int i,j,n;
    cin>>n;
    cout<<"*"<<endl;
    for(i=0;i<n;i++)
    {
        cout<<"*";
        for(j=1;j<i+1;j++)
        {
            cout<<j;
        }
        while(j>0)
        {
            cout<<j--;
        }
        cout<<"*";
        cout<<endl;
    }
    for(i=n-1;i>=1;i--)
    {
        cout<<"*";
        for(j=1;j<i;j++)
        {
            cout<<j;
        }
        while(j>0)
        {
            cout<<j--;
        }
        cout<<"*";
        cout<<endl;
    }
     cout<<"*";
}
